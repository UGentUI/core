{
  "name": "@ugent-ui/core",
  "description": "A collection of accessible web components and tools for building UGent applications. Built on top of Shoelace (https://shoelace.style), an open-source library of web components.",
  "version": "1.0.0-beta.1",
  "type": "module",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./style.css": "./dist/style.css",
    "./components/*": {
      "types": "./dist/components/*/index.d.ts",
      "import": "./dist/components/*/index.js"
    }
  },
  "sideEffects": [
    "./dist/components/**/*.js"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "@shoelace-style/shoelace": "^2.17.1",
    "@ugent-ui/css-reset": "^1.0.0-beta.9",
    "@ugent-ui/design-tokens": "^1.0.0-beta.15",
    "fs-extra": "^11.2.0",
    "lit": "^3.2.0",
    "sass": "^1.72.0"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^1.9.0",
    "@storybook/addon-essentials": "^8.3.5",
    "@storybook/addon-interactions": "^8.3.5",
    "@storybook/addon-links": "^8.3.5",
    "@storybook/blocks": "^8.3.5",
    "@storybook/test": "^8.3.5",
    "@storybook/web-components": "^8.3.5",
    "@storybook/web-components-vite": "^8.3.5",
    "@typescript-eslint/eslint-plugin": "^8.5.0",
    "@typescript-eslint/parser": "^8.5.0",
    "eslint": "^9.10.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-storybook": "^0.9.0",
    "prettier": "^3.4.1",
    "rollup-plugin-copy": "^3.5.0",
    "storybook": "^8.3.5",
    "typescript": "^5.2.2",
    "vite": "^5.2.0",
    "vite-plugin-dts": "^4.2.3"
  },
  "eslintConfig": {
    "extends": [
      "plugin:storybook/recommended"
    ]
  }
}
